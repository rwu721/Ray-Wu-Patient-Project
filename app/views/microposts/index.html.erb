<%= provide(:title, 'All posts') %>
<h1> All Posts </h1>

<ul class = "Posts">
	<%= @microposts.each do |micropost| %>
	<li>
		<span class="text"><%= micropost.text %></span>
		<span class="timestamp">
			Posted <%= time_ago_in_words(micropost.created_at) %> ago </span>
			
		<%= link_to "Edit", edit_micropost_path(micropost.id) %>
		<%= link_to "Delete", micropost, method: :Delete, confirm: "You sure?" %>

	</li>
	<% end %>

</ul>


